<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>NewsPortal</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.pvt.maruk.newsportal.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ServletSecurityFilter</filter-name>
        <filter-class>by.pvt.maruk.newsportal.filter.ServletSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServletSecurityFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>Formalnii</servlet-name>
        <servlet-class>by.pvt.maruk.newsportal.controller.FormalniiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Formalnii</servlet-name>
        <url-pattern>/Formalnii</url-pattern>
    </servlet-mapping>
    
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error.jsp</location>
    </error-page>

</web-app>